<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="15dp"
    android:layout_marginTop="20dp">

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_tutor_blt"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginStart="2dp"
            app:cardBackgroundColor="@color/redSumbangsih"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_faq" />
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/Montserrat.Black3.13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apa Itu BLT ? "
            android:textAlignment="center"
            android:textColor="@color/grey_darken3" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_tutor_surat_pengajuan"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="4dp"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            app:cardBackgroundColor="@color/redSumbangsih"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_checklist" />
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/Montserrat.Black3.13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Syarat Pengajuan"
            android:textAlignment="center"
            android:textColor="@color/grey_darken3" />

    </androidx.appcompat.widget.LinearLayoutCompat>

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/btn_tutor_step"
        android:layout_weight="1"
        android:layout_marginStart="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginEnd="5dp"
            app:cardBackgroundColor="@color/redSumbangsih"
            app:cardCornerRadius="10dp">

            <ImageView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_step_line" />
        </androidx.cardview.widget.CardView>

        <TextView
            style="@style/Montserrat.Black3.13sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Langkah-Langkah "
            android:textAlignment="center"
            android:textColor="@color/grey_darken3" />

    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>